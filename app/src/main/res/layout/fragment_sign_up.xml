<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent"
        tools:context=".SignUpFragment"
        android:background="@color/primaryColor"
        android:id="@+id/scrollView2">


        <LinearLayout
            android:id="@+id/full_registration_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/submit_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/signUpHeader"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/signUpHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpHeader">

            <TextView
                android:id="@+id/signUpHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="13dp"
                android:fontFamily="@font/luckiestguy"
                android:text="@string/track_every_penny"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/large_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputFirstname"
                    style="@style/loginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/first_name"
                    android:inputType="text"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputLastname"
                    style="@style/loginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/last_name"
                    android:inputType="text"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputMiddleName"
                    style="@style/loginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/middle_name"
                    android:inputType="text"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputUsernameLayout"
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputUsername"
                    style="@style/loginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEmail"
                    style="@style/loginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordTextLayout"
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:endIconCheckable="true"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordTextLayout"
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:endIconCheckable="true"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputConfirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/dob"
                    android:inputType="date"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/loginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/primaryTextColor"
                app:boxStrokeColor="@color/primaryTextColor"
                app:hintTextColor="@color/primaryTextColor"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_weeklyBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeuib"
                    android:hint="@string/weekly_budget"
                    android:inputType="date"
                    android:textColor="@color/primaryTextColor"
                    app:hintTextColor="@color/primaryTextColor"
                    tools:layout_conversion_absoluteHeight="0dp"
                    tools:layout_conversion_absoluteWidth="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submit_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/primaryTextColor"
                android:fontFamily="@font/segoeuib"
                android:paddingStart="@dimen/button_padding"
                android:paddingLeft="@dimen/button_padding"
                android:paddingEnd="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textColor="@color/onboardingColor"
                android:textSize="@dimen/onboarding_texts"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp" />

            <Button
                android:id="@+id/save_user_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/primaryTextColor"
                android:fontFamily="@font/segoeuib"
                android:visibility="gone"
                android:paddingStart="@dimen/button_padding"
                android:paddingLeft="@dimen/button_padding"
                android:paddingEnd="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:text="@string/save_user_data"
                android:textAllCaps="false"
                android:textColor="@color/onboardingColor"
                android:textSize="@dimen/onboarding_texts"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp" />
        </LinearLayout>


    </ScrollView>
</layout>