<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:fontFamily">@font/segoeuib</item>
    </style>

    <style name="AppTheme.NoActionBar.SplashActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/mobotithe_splash</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="loginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="notLoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="signupTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/PrimaryGreyColor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="GenericText">
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/primaryColor</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Mobotithe" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primaryTextColor</item>
    </style>

    <style name="RoundedButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="RoundedButton.Orange" parent="RoundedButton">
        <item name="android:backgroundTint">@color/secondaryColor</item>
    </style>

    <style name="Calendar">

    </style>

    <style name="Calendar.LightBlue">
        <item name="android:background">@drawable/rounded_shape_light</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.IncomeCategory" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="Settings">

    </style>

    <style name="Settings.Button">
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="GenericText.SettingsHeader" parent="GenericText">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GenericText.SettingsSubtext" parent="GenericText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="android:textAlignment" tools:ignore="NewApi">textStart</item>
        <item name="android:textSize">17sp</item>
        <item name="android:clickable">true</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Filter.Mobotithe" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/segoeuib</item>
        <item name="chipStrokeColor">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="GenericText.ProfileText" parent="GenericText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ProfileTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

    </style>

    <style name="ToolbarText">
        <item name="android:fontFamily">@font/segoeuib</item>
    </style>


</resources>
